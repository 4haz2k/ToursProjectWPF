<Page x:Class="WPFToursProject.Verification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFToursProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Verification" Background="White">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите название отеля для удаления" FontSize="18"></TextBlock>
            <TextBox x:Name="VerifyTextBox" Margin="0 10"></TextBox>
            <Button Content="Удалить" x:Name="BtnVerify" Click="BtnVerify_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
